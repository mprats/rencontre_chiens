<div class ="background-home">
  <div class="container">
    </br>
  <div class="welcome_shearch">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <%= f.label :Email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field">
        <%= f.label :Mots_de_passe %> <i>(laisser blanc si vous ne voulez pas changer)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    
      <div class="field">
        <%= f.label :Confirmation_mots_de_passe %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    
      <div class="field">
        <%= f.label :Mots_de_passe_actuelle %> <i>(si vous voulez changez de mots de passe)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>
      
      <div class="field">
        <%= f.label :Prenom %><br>
        <%= f.text_field :first_name %>
      </div>
      
      <div class="field">
        <%= f.label :Nom %><br>
        <%= f.text_field :last_name %>
      </div>
      
      <div class="field">
        <%= f.label :Date_de_naissance %><br>
        <%= f.date_select :birthdate, {order: [:day, :month, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year - 120} %>
      </div>
      
      <div class="field">
        <%= f.label :Numero_de_telephone %><br>
        <%= f.text_field :phone_number %>
      </div>
      
      <div class="field">
        <%= f.label :Genre %><br>
        <%= f.select :gender, ['Male', 'Female'] %>
      </div>
      
      <div class="field">
        <%= f.label :Pays %><br>
        <%= f.text_field :country %>
      </div>
      
      <div class="field">
        <%= f.label :Rue %><br>
        <%= f.text_field :street %>
      </div>
      
      <div class="field">
        <%= f.label :Code_postale %><br>
        <%= f.text_field :postal_code %>
      </div>
    
      <%= f.submit 'Valider', class: 'btn btn-success navbar-btn' %>

    <% end %>
    
</div>
</div>
</div>