<div class ="background-home">
  <div class="container">
    
    <div class="welcome_shearch">
      <h2>Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <%= f.label :email %><br />
      <div class="white-po">
        <%= f.email_field :email, autofocus: true %>
      </div>
    

      <%= f.label :Mot_de_passe %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />

      <div class="white-po">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    

      <%= f.label :Confirmation_mot_de_passe %><br />
      <div class="white-po">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      
      <%= f.label :Prenom %><br>
      <div class="white-po">
        <%= f.text_field :first_name %>
      </div>
      
      <%= f.label :Nom %><br>
      <div class="white-po">
        <%= f.text_field :last_name %>
      </div>
      

      <%= f.label :Date_de_naissance %><br>
      <div class="white-po">
        <%= f.date_select :birthdate, {order: [:day, :month, :year], prompt: { day: 'Jour', month: 'Mois', year: 'AnnÃ©e' }, start_year: Date.today.year, end_year: Date.today.year - 120} %>
      </div>
      
      <%= f.label :Numero_de_telephone %><br>
      <div class="white-po">
        <%= f.text_field :phone_number %>
      </div>
      

      <%= f.label :Genre %><br>
      <div class="white-po">
        <%= f.select :gender, ['Homme', 'Femme'] %>
      </div>
      
      <%= f.label :Pays %><br>
      <div class="white-po">
        <%= f.text_field :country %>
      </div>
      

      <%= f.label :Rue %><br>
      <div class="white-po">
        <%= f.text_field :street %>
      </div>
      
      <%= f.label :Code_postal %><br>
      <div class="white-po">
        <%= f.text_field :postal_code %>
      </div>
      
    
      <div class="actions">
        <%= f.submit "Valider", class: 'btn btn-success navbar-btn' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
</div>
</div>
</div>