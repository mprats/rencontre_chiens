<div class ="background-home">
  <div class="container">
    
    <div class="welcome_shearch">
      <h2>Se connecter</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <%= f.label :email %><br />
      <div class="white-po">
        <%= f.email_field :email, autofocus: true %>
      </div>
    
     <%= f.label :Mot_de_passe %><br />
      <div class="white-po">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    
      <% if devise_mapping.rememberable? -%>
        <div class="feeld">
          <%= f.check_box :remember_me %>
          <%= f.label :Se_souvenir_de_moi %>
        </div>
      <% end -%>
    
      <div class="actions">
        <%= f.submit 'Connexion', class: 'btn btn-success navbar-btn' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>