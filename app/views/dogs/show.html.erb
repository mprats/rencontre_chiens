<div class ="background-home">
    <br>
    <br>
    <div class = "brique_chien">
        <p id="notice"><%= notice %></p>
        
        <p>
            <strong>Nom :</strong>
            <%= @dog.name %>
        </p>
        
        <p>
            <strong>Race :</strong>
            <%= @dog.breed %>
        </p>
        
        <p>
            <strong>Age :</strong>
            <%= pluralize(@age, "an") %>
        </p>
        
        <p>
            <strong>Genre :</strong>
            <%= @dog.gender %>
        </p>
        
        
        <% if @pictures.present? %>
        
          <h2>Photos</h2>
          
          
          <% unless @pictures.empty? %>
            <% @pictures.each do |pic| %>
              <div>
                <%= image_tag pic.image.url %>
              </div>
              <br>
            <% end %>
          <% end %>
        
        <% end %>
        
        <% if user_signed_in? %>
            <% if (current_user.id == @dog.user_id) %>
                <%= link_to 'Editer', edit_dog_path(@dog), class: 'btn btn-primary btn-xs' %> |
            <% else %>
                <%= link_to "Contacter le propriétaire", conversations_path(sender_id: current_user.id, recipient_id: @dog.user_id), method: "post", class: 'btn btn-primary btn-xs'%> |
            <% end %>
        <% end %>
        
        <%= link_to 'Fiche du maître', @dog.user, class: 'btn btn-primary btn-xs' %>
    </div>
</div>