      <h2><%= pluralize(@dog.errors.count, "error") %> prohibited this dog from being saved:</h2>

      <ul>
      <% @dog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :breed %><br>
    <%= f.text_field :breed %>
  </div>
  
  <div class="field">
    <%= f.label :birthdate %><br>
    <%= f.date_select :birthdate, {order: [:day, :month, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year - 50} %>
  </div>
  
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select :gender, ['Male', 'Female'] %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
